rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Thought nodes - users can only access their own
    match /users/{userId}/thoughtNodes/{nodeId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Node connections - users can only access their own
    match /users/{userId}/connections/{connectionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // AI analysis results - users can only access their own
    match /users/{userId}/aiAnalysis/{analysisId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Shared insights (optional - for collaboration features)
    match /sharedInsights/{insightId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
  }
}